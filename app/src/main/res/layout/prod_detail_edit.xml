<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"
                android:textSize="@dimen/body_font_large"
                android:text="CATEGORY NAME"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_prod_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Title"
                    android:textStyle="bold"
                    android:textSize="@dimen/body_font_large"
                    android:theme="@style/TextInputTheme"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:id="@+id/et_prod_title_ar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_prod_title"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textDirection="rtl"
                    android:text="Product Title Arabic"
                    android:textStyle="bold"
                    android:textSize="@dimen/body_font_large"
                    android:theme="@style/TextInputTheme"
                    android:textColor="@android:color/black"
                    />
            </RelativeLayout>
            <EditText
                android:id="@+id/et_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/listing_text_size_large"
                android:theme="@style/TextInputTheme"
                android:text="50 AED"/>
            <TextView
                android:id="@+id/tv_product_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lightGrey"
            android:layout_below="@id/product_title_section"
            />

        <LinearLayout
            android:layout_below="@id/separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Values Layout End-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/listing_text_size_large"
                        android:text="@string/label_size"/>
                    <EditText
                        android:id="@+id/et_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:theme="@style/TextInputTheme"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/listing_text_size_large"
                        android:textAllCaps="true"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/listing_text_size_large"
                        android:text="@string/label_color"/>
                    <EditText
                        android:id="@+id/et_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:theme="@style/TextInputTheme"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/listing_text_size_large"
                        android:textAllCaps="true"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_target_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:layout_weight="1"
                        android:textSize="@dimen/listing_text_size_large"
                        android:text="@string/label_target_group"
                        />
                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/edit_spinner_group"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_weight="1"
                        android:background="@drawable/round_rect_shape"
                        android:popupTheme="@style/SpinnerDropdownTheme"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:layout_weight="1"
                        android:textSize="@dimen/listing_text_size_large"
                        android:text="@string/label_handling_time"
                        />
                    <com.shawnlin.numberpicker.NumberPicker
                        android:id="@+id/edit_order_limit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:np_height="36dp"
                        app:np_orientation="horizontal"
                        app:np_dividerColor="@color/colorAccent"
                        app:np_max="10"
                        app:np_min="1"
                        app:np_selectedTextColor="@color/colorPrimaryDark"
                        app:np_textColor="@color/colorPrimaryDark"
                        app:np_value="1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/listing_text_size_large"
                        android:text="@string/label_daily_limit"/>
                    <com.shawnlin.numberpicker.NumberPicker
                        android:id="@+id/edit_handling_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:np_height="36dp"
                        app:np_orientation="horizontal"
                        app:np_dividerColor="@color/colorAccent"
                        app:np_max="10"
                        app:np_min="1"
                        app:np_selectedTextColor="@color/colorPrimaryDark"
                        app:np_textColor="@color/colorPrimaryDark"
                        app:np_value="1" />
                </LinearLayout>

            </LinearLayout>

            <!--Description Layout Start-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <!--Label English Desc-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/listing_text_size_large"
                    android:text="@string/label_desc_en"/>
                <!--Value English Desc-->
                <EditText
                    android:id="@+id/et_desc_en"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/body_font_large"
                    />
                <!--Label Arabic Desc-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/listing_text_size_large"
                    android:text="@string/label_desc_ar"/>

                <!--Value Arabic Desc-->
                <EditText
                    android:id="@+id/et_desc_ar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/body_font_large"
                    />
            </LinearLayout>
            <!--Description Layout End-->
        </LinearLayout>
</LinearLayout>