<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In order to have your listings live, you need to enter your bank account information. Entering a valid bank account information is important for us to wire money to your account after successful purchases."/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/bank_info_account_holder_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextInputTheme"
                android:layout_marginTop="10dp"
                app:errorEnabled="true"
                >
                <EditText
                    android:id="@+id/bank_info_account_holder_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Account Holder"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:theme="@style/TextInputTheme"
                    android:textColor="@android:color/black"
                    android:backgroundTint="@color/lightGrey"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_settings"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/lightGrey"
                    android:text="To validate your information, you will later on be requested to submit documents matching the name you just entered (Company Registration in case of business, National ID or Passport in case of individual)."/>
            </LinearLayout>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/bank_info_bank_name_spinner"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:entries="@array/banks"
                android:background="@drawable/round_rect_shape"
                android:popupTheme="@style/SpinnerDropdownTheme"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/bank_info_account_number_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextInputTheme"
                android:layout_marginTop="10dp"
                app:errorEnabled="true"
                >
                <EditText
                    android:id="@+id/bank_info_account_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Account Number"
                    android:inputType="number"
                    android:maxLines="1"
                    android:theme="@style/TextInputTheme"
                    android:textColor="@android:color/black"
                    android:backgroundTint="@color/lightGrey"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_settings"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/lightGrey"
                    android:text="Information is masked for your protection"/>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/bank_info_iban_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextInputTheme"
                android:layout_marginTop="10dp"
                app:errorEnabled="true"
                >
                <EditText
                    android:id="@+id/bank_info_iban"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="IBAN"
                    android:inputType="number"
                    android:maxLines="1"
                    android:theme="@style/TextInputTheme"
                    android:textColor="@android:color/black"
                    android:backgroundTint="@color/lightGrey"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_settings"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/lightGrey"
                    android:text="Information is masked for your protection"/>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/bank_info_swift_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextInputTheme"
                android:layout_marginTop="10dp"
                app:errorEnabled="true"
                >
                <EditText
                    android:id="@+id/bank_info_swift_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Swift Code"
                    android:inputType="number"
                    android:maxLines="1"
                    android:theme="@style/TextInputTheme"
                    android:textColor="@android:color/black"
                    android:backgroundTint="@color/lightGrey"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_settings"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/lightGrey"
                    android:text="Information is masked for your protection"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>