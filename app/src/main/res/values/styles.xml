<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>


    </style>

    <style name="AlertDialogTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorAlertDialogListItem">@color/shittyGreen</item>

    </style>

    <style name="NavigationViewTheme">
        <item name="android:listDivider">@color/lightGrey</item>
        <item name="android:textStyle">bold</item>
        <item name="colorControlHighlight">#cdcdcd</item>
    </style>

    <style name="SpinnerDropdownTheme">
        <item name="android:listDivider">@color/lightGrey</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:background">@color/shittyGreen</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextInputTheme" parent="Theme.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="android:textSize">15sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/shittyGreen</item>
    </style>

</resources>
